<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioActivity"
    android:orientation="vertical"
    android:paddingVertical="10dp"
    android:paddingHorizontal="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#FF06AC9C">

        <TextView
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Formulario Datos Estudiante EPIS"
            android:textColor="#EFF1F4"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="5dp"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombres:"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                android:textColor="#FF06AC9C"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellidos:"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                android:textColor="#FF06AC9C"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DNI:"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                android:textColor="#FF06AC9C"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CUI:"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                android:textColor="#FF06AC9C"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                android:textColor="#FF06AC9C"
                android:textStyle="bold"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="right"
            >
            <EditText
                android:id="@+id/EditTextName"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:inputType="text"
                android:layout_width="fill_parent"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                android:textSize="15dp">
            </EditText>
            <EditText
                android:id="@+id/EditTextApe"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Apellidos paterno y materno"
                android:layout_width="fill_parent"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                android:textSize="15dp">
            </EditText>
            <EditText
                android:id="@+id/EditTextDni"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="DNI"
                android:layout_width="fill_parent"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                android:textSize="15dp">
            </EditText>
            <EditText
                android:id="@+id/EditTextCui"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="CUI"
                android:layout_width="fill_parent"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                android:textSize="15dp">
            </EditText>
            <EditText
                android:id="@+id/EditTextEmail"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="example@example.com"
                android:layout_width="fill_parent"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"
                android:textSize="15dp">
            </EditText>
        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:columnCount="3"
        android:rowCount="1"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
    >
        <Button
            android:id="@+id/buttonReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FF06AC9C"
            android:paddingHorizontal="10dp"
            android:text="Registar datos"
            android:textColor="#EFF1F4"
            android:textColorHint="@color/colorPrimary"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/buttonLimpiar"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:background="#FF06AC9C"
            android:paddingHorizontal="10dp"
            android:text="Limpiar"
            android:textColor="#EFF1F4"
            android:textColorHint="@color/colorPrimary"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center"
            android:background="#FF06AC9C"
            android:paddingHorizontal="10dp"
            android:text="Cancelar"
            android:textColor="#EFF1F4"
            android:textColorHint="@color/colorPrimary"
            android:layout_marginRight="10dp"/>
    </GridLayout>

</LinearLayout>